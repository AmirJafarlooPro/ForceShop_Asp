@model IEnumerable<ProductGroup>

<div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
    <div class="footer-title">
        <h4>دسته‌بندی‌ها</h4>
    </div>

    <div class="footer-contain">
        @if (!Model.IsNullOrEmpty())
        {
            <ul>
                @foreach (var item in Model)
                {
                    <li>
                        <a class="text-content" asp-controller="Product" asp-action="ShowProductByGroup" asp-route-id="@item.ID" asp-route-title="@item.GroupTitle">@item.GroupTitle</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>


