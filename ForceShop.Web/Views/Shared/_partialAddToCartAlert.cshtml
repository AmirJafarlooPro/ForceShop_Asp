@{
    var addToCartMessage = TempData["AddToCartSuccess"] as string;
    if (!string.IsNullOrEmpty(addToCartMessage) && addToCartMessage.Contains("موفقیت"))
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                title: 'موفقیت',
                text: 'محصول با موفقیت به سبد خرید اضافه شد!',
                icon: 'success',
                confirmButtonText: 'باشه'
            });
        </script>
    }
}
